<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/titlebar_height"
                android:background="@color/bg_red">

                <include layout="@layout/custom_titlex"></include>

                <include
                    android:id="@+id/layout_float_head_view"
                    layout="@layout/layout_new_time_left"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/refresh_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   >

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/item_recyView_bg"
                         />

                </android.support.v4.widget.SwipeRefreshLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/chang_shi_item_height_gb"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        >

                        <RadioButton
                            android:id="@+id/rb_new"
                            style="@style/rb_item_list"
                            android:background="@drawable/rb_bg_selector"
                            android:checked="true"
                            android:onClick="onClick"
                            android:text="新款" />

                        <RadioButton
                            android:id="@+id/rb_older"
                            style="@style/rb_item_list"
                            android:onClick="onClick"
                            android:text="旧款" />
                    </RadioGroup>
                    <include layout="@layout/item_sort_menus" />

                    <include layout="@layout/chang_shi_item_gb" />
                    <LinearLayout
                        android:id="@+id/top_bottomx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_bottomx"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/chang_shi_item_height"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone"></LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/line_gray"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/ll_top2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:weightSum="9">


                        <TextView
                            android:id="@+id/tv_shopcat"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="2"
                            android:drawablePadding="4dp"
                            android:drawableTop="@drawable/category_nor"
                            android:gravity="center"
                            android:padding="4dp"
                            android:tag="1"
                            android:textColor="#717171"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="#D9D9D9"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_deal"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="2"
                            android:drawablePadding="4dp"
                            android:drawableRight="@drawable/arrow_down_gray"
                            android:gravity="center"
                            android:tag="1"
                            android:text="销量"
                            android:textColor="#717171"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="#D9D9D9" />

                        <TextView
                            android:id="@+id/tv_collect"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="2"
                            android:drawablePadding="4dp"
                            android:drawableRight="@drawable/arrow_down_gray"
                            android:gravity="center"
                            android:tag="1"
                            android:text="收藏"
                            android:textColor="#717171"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="#D9D9D9" />

                        <TextView
                            android:id="@+id/tv_mustdeal"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="3"
                            android:drawablePadding="4dp"
                            android:drawableRight="@drawable/arrow_down_gray"
                            android:gravity="center"
                            android:tag="1"
                            android:text="即将成团"
                            android:textColor="#717171"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/ll_next_activity"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/ll_next_activity_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/btn_next_activity"
                            android:gravity="center"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/btn_next_activity"
                            android:layout_width="128dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_rectangle_green1"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="本团介绍"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_scroll_to_top"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/scroll_to_top" />
            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="30dp"
                android:text="无相关款式，请到最新场次进行下单"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>
    <!--这是侧边栏滑动时出现的右边布局内容-->
    <include layout="@layout/layout_draw_conent" />
</android.support.v4.widget.DrawerLayout>



