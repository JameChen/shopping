<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_red">

    <TextView
        android:id="@+id/tvTLeft"
        style="@style/Text.L.Gray"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_titlebar_btn_selector"
        android:drawableLeft="@drawable/back"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="   "
        android:textColor="@color/title_bar_text_color" />

    <TextView
        android:id="@+id/tvTitleCenter"
        style="@style/Text.L.Black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:singleLine="true"
        android:paddingRight="80dp"
        android:paddingLeft="80dp"
        android:ellipsize="end"
        android:textColor="@color/title_bar_text_color"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/tl_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">

        <ProgressBar
            android:id="@+id/pbgT"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_Tsearch"
            android:layout_width="40dp"
            android:layout_height="@dimen/titlebar_height"
            android:background="@drawable/bg_titlebar_btn_selector"
            android:contentDescription="@android:string/ok"
            android:paddingBottom="12dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/find"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTRight"
            style="@style/Text.L.Gray"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_titlebar_btn_selector"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:textColor="@color/title_bar_text_color"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/iv_all_search"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingRight="@dimen/pin_tittle_margin"
            android:src="@drawable/pn_message_left_white"
            style="@style/title_iv" />
        <ImageView
            android:id="@+id/iv_chat_txt"
            style="@style/title_iv"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/pin_tittle_mess_margin"
            android:layout_centerInParent="true"
            android:onClick="onClick"
            android:src="@drawable/pn_message_right_white" />
