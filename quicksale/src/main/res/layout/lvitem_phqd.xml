<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <View android:layout_height="10dp"
        android:layout_width="match_parent"
        android:background="#eee"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/txt2"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="配送方式："
        />
    <TextView
        android:id="@+id/txt2_select"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="36dp"
        android:layout_toRightOf="@id/txt2"
        android:background="@drawable/button_bg"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="请选择"
        />
    <TextView
        android:id="@+id/txt2_detail"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="36dp"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:text=""
        />
    <TextView
        android:id="@+id/txt3"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物停留："
        />
    <TextView
        android:id="@+id/txt3_detail"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="66dp"
        android:layout_toRightOf="@id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:gravity="center"
        android:text=""
        />
    <TextView
        android:id="@+id/fhsz"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="66dp"
        android:background="@drawable/button_bg"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:text="发货设置"
        />
    <TextView
        android:id="@+id/txt4"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="132423423424"
        />
    <ImageView
        android:id="@+id/btnUp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_red"
        android:src="@drawable/up_icon"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        />

    <com.nahuo.library.controls.NoScrollListView
        android:id="@+id/list"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        style="@style/Text.M.Gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:layout_marginTop="130dp"
        android:background="@color/white"/>
</RelativeLayout>
