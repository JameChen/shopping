<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/phqd_item_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_bg"
    >

    <ImageView
        android:id="@+id/img_order_detail_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/activity_horizontal_8dp"
        android:layout_marginRight="@dimen/activity_horizontal_8dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@android:id/checkbox"
        android:contentDescription="@android:string/ok"
        android:layout_marginBottom="6dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txt_order_detail_name"
        style="@style/Text.M.Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_order_detail_icon"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/txt_order_detail_detail"
        style="@style/Text.M.Gray"
        android:textColor="@color/gray_92"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_order_detail_name"
        android:layout_alignLeft="@id/txt_order_detail_name"
        android:layout_marginTop="2dp"
        android:background="@color/bg_gray"
        android:gravity="center_vertical|left"
        android:layout_marginRight="@dimen/activity_horizontal_8dp"
        android:padding="5dp"/>

</RelativeLayout>