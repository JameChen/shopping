<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_titlebar_default" />

    <com.nahuo.widget.TouchFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="outsideOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 填写验证码 -->

                <include
                    android:id="@+id/layout_get_verifycode"
                    layout="@layout/layout_get_verifycode2" />
                <!-- 回答安全问题 -->

                <include
                    android:id="@+id/forgotpwd_safe_question"
                    layout="@layout/layout_safe_question1" />


            </LinearLayout>

        </ScrollView>

    </com.nahuo.widget.TouchFrameLayout>
</LinearLayout>