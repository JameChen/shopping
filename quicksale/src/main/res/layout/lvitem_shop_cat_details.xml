<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="8dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@android:id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@drawable/selector_checkbox_circle_blue"
            android:focusable="false" />

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:layout_toRightOf="@android:id/checkbox"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/Text.M.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/iv_preview"
            android:ellipsize="end"
            android:lines="2" />

        <TextView
            android:id="@+id/tv_from"
            style="@style/Text.M.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tv_content"
            android:layout_toRightOf="@+id/iv_preview"
            android:textColor="#A1A1A1" />
    </RelativeLayout>

    <TextView
        android:id="@android:id/text1"
        style="@style/Text.S.Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:textColor="#A1A1A1" />

    <TextView
        android:id="@android:id/text2"
        style="@style/Text.S.Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:textColor="#A1A1A1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingLeft="30dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp" >

        <TextView
            android:id="@+id/tv_share_count"
            style="@style/text_list_share_etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:drawableLeft="@drawable/friend_circle_count"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="#A1A1A1" />

        <ImageView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/tv_share_count"
            android:padding="5dp"
            android:src="@drawable/share_list_small" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/tv_share"
            android:padding="5dp"
            android:src="@drawable/edit_green" />

        <ImageButton
            android:id="@+id/btn_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@color/transparent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_ablumshare_bg" />
    </RelativeLayout>

</LinearLayout>