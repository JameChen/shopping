<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp" >

    <include
        android:id="@+id/include_id1"
        layout="@layout/include_dialog_trade_log"/>

    <include
        android:id="@+id/include_id2"
        layout="@layout/include_dialog_trade_log"/>

    <include
        android:id="@+id/include_id_time"
        layout="@layout/include_dialog_trade_log"/>

    <include
        android:id="@+id/include_id3"
        layout="@layout/include_dialog_trade_log"/>

    <include
        android:id="@+id/include_id4"
        layout="@layout/include_dialog_trade_log"/>

    <include
        android:id="@+id/include_id5"
        layout="@layout/include_dialog_trade_log2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn_negative"
            style="@style/button_blue_text_style"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_white_all_corners"
            android:text="关闭"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>