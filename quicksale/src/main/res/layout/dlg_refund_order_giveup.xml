<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/draw_white_corner_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/draw_top_corner_black"
        android:gravity="center"
        android:text="您确认要拒绝买家提出的退款申请？"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:text="拒绝原因（可空）" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/et_dlg_contents"
                android:layout_width="match_parent"
                 android:enabled="true"
			    android:gravity="top"
			    android:inputType="textMultiLine"
			    android:minLines="8"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/text1"
               
                android:paddingBottom="5dp"
                android:paddingLeft="4dp"
                android:paddingTop="5dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal" >
    <Button
            android:id="@+id/sure_cancle_seller_no"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/layout_white_nocorners_bg"
            android:text="@string/btn_cancle"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <Button
            android:id="@+id/sure_confirm_seller_no"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/layout_white_nocorners_bg"
            android:text="拒绝退款"
            android:textColor="@color/black"
            android:textSize="16sp" />

    
    </LinearLayout>

</LinearLayout>