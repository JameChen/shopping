<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:background="@drawable/jump_list_bg" >

    <LinearLayout
        android:id="@+id/ll_pop_expore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/Iv_expore"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/lt" />

        <TextView
            style="@style/pop_contents"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:gravity="center|left"
            android:text="浏览图片" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_pop_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_pop_expore"
        android:visibility="gone"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/Iv_Collection"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/txt_pop_collect"
            style="@style/pop_contents"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:gravity="center|left"
            android:text="收藏帖子" />
    </LinearLayout>

</RelativeLayout>