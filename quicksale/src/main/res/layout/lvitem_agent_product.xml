<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_bg"
    android:descendantFocusability="blocksDescendants"
    >

    <ImageView
        android:id="@+id/img_order_detail_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@android:id/checkbox"
        android:contentDescription="@android:string/ok"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txt_order_detail_name"
        style="@style/Text.M.Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_order_detail_icon"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/txt_order_detail_info"
        style="@style/Text.M.Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_order_detail_name"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_order_detail_icon"
        android:textColor="@color/lightgray" />

    <LinearLayout 
        android:id="@+id/ll_editnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txt_order_detail_info"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/txt_order_detail_info"
        android:orientation="horizontal">
        <Button
	        android:id="@+id/et_sendgoods_number"
	        style="@style/Text.M.Gray"
	        android:text="1"
	        android:minWidth="32dp"
                android:gravity="center"
	        android:background="@drawable/draw_white_rect_bl"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/lightgray"
	        />
        <Button android:id="@+id/txt_sendgoods_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_edittext_border"
            android:text="删除"
            android:background="@null"
            android:paddingLeft="4dp"
            android:paddingRight="10dp"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            />
    </LinearLayout>
    
    <TextView
        android:id="@+id/txt_order_detail_money"
        style="@style/Text.M.Gray"
        android:text="saff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_order_detail_info"
        android:layout_alignLeft="@id/txt_order_detail_info"
        />
    <TextView 
        android:id="@+id/txt_order_detail_get_money"
        style="@style/Text.M.Gray"
        android:text="saff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_order_detail_money"
        android:layout_alignTop="@id/txt_order_detail_money"
        android:layout_marginLeft="2dp"
        android:textColor="@color/lightgray"
        />
	<View style="@style/line_view" android:layout_marginLeft="68dp"
	    android:layout_marginTop="16dp"
	    android:layout_below="@id/txt_order_detail_money"/>
	
</RelativeLayout>