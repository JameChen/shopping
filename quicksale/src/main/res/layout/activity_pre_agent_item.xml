<?xml version="1.0" encoding="utf-8"?>
<com.nahuo.widget.TouchFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/bg_gray"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:background="@drawable/sjsp_banner"
            android:gravity="center"
            android:text="上架到我的店铺"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:text="@string/pre_agent_item" />

        <Button
            android:id="@+id/btn_share_item"
            style="@style/Button.Orange"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="36dp"
            android:onClick="onClick"
            android:layout_margin="16dp"
            android:text="立即上架" />

        <CheckBox
            android:id="@+id/cb_no_longer_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:text="知道了，不再提示"
            android:button="@drawable/selector_checkbox_1"
            android:textSize="13sp" />
    </LinearLayout>

</ScrollView>
</com.nahuo.widget.TouchFrameLayout>