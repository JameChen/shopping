<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/itemcat_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/view_pw_white_bg"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" >

        <LinearLayout
            android:id="@+id/itemcat_pw_rightview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/itemcat_pw_icon_loading"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/loading_mini"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:visibility="gone" />

            <Button
                android:id="@+id/itemcat_pw_btnAdd"
                style="@style/button_red_style_1"
                android:layout_width="80dp"
                android:layout_gravity="center_vertical"
                android:text="@string/specqty_pw_btnAdd" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/itemcat_pw_rightview" >

            <com.nahuo.library.controls.EditTextEx
                android:id="@+id/itemcat_pw_edtName"
                style="@style/edittext_one_style"
                android:layout_width="match_parent"
                android:drawableRight="@drawable/txt_clear_bg"
                android:paddingLeft="85dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="@string/itemcat_edtItemCat_title"
                android:textSize="@dimen/fontsize_content_normal" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>