<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eee"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="1" />
        <TextView
            android:id="@+id/btnGoOrderGood"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:layout_toLeftOf="@+id/btnGoWL"
            android:layout_marginTop="36dp"
            android:background="@drawable/button_bg"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="点货" />
        <TextView
            android:id="@+id/btnGoWL"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="36dp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="物流" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:text="1" />
        <TextView
            android:id="@+id/btnGoDetail"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:layout_toLeftOf="@+id/btnUp"
            android:background="@drawable/button_bg"
            android:layout_marginTop="80dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="明细" />
        <ImageView
            android:id="@+id/btnUp"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="80dp"
            android:background="@drawable/btn_red"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:src="@drawable/up_icon" />


    </RelativeLayout>

    <com.nahuo.library.controls.NoScrollListView
        android:id="@+id/list"
        style="@style/Text.M.Gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp" />
</LinearLayout>