<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/ll_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_record_nick"
            style="@style/text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="test" />

        <TextView
            android:id="@+id/tv_record_time"
            style="@style/text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="2019-1-1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_record_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_record"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_record_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2019-1-1"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/tv_record_contents_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_record_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_record_1"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/tv_record_contents_img_item"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp" />

        <TextView
            android:id="@+id/tv_record_contents_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:text="sjdsjadjsakjdjash"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>