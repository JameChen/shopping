<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lladd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/layout_pin_huo_list_new_head_view">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.nahuo.quicksale.controls.MyWebView
            android:id="@+id/tv_next_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_detail_line_spacing"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:onClick="onClick"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_overed_tips"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/body_text_1"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_top1"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:text="距截单"
            android:textStyle="bold"
            android:textColor="@color/body_text_1"
            android:textSize="@dimen/time_txt_size" />

        <TextView
            android:id="@+id/tv_day"
            style="@style/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1" />

        <TextView
            android:id="@+id/tv_day_desc"
            style="@style/text_time_r"
            android:text="天"
            android:textColor="@color/body_text_1" />

        <TextView
            android:id="@+id/tv_hh"
            style="@style/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1" />

        <TextView
            android:id="@+id/tv_h"
            style="@style/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1" />

        <TextView
            style="@style/text_time_r"
            android:text="时"
            android:textColor="@color/body_text_1" />

        <TextView
            android:id="@+id/tv_mm"
            style="@style/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1" />

        <TextView
            android:id="@+id/tv_m"
            style="@style/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1" />

        <TextView
            style="@style/text_time_r"
            android:text="分"
            android:textColor="@color/body_text_1" />

        <TextView
            android:id="@+id/tv_ss"
            style="@style/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1" />

        <TextView
            android:id="@+id/tv_s"
            style="@style/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1" />

        <TextView
            style="@style/text_time_r"
            android:text="秒"
            android:textColor="@color/body_text_1" />

        <TextView
            android:id="@+id/tv_f"
            style="@style/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1" />
    </LinearLayout>
</LinearLayout>