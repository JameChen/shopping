<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/specqty_items_tvColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="@dimen/fontsize_content_normal" />

    <TextView
        android:id="@+id/specqty_items_tvSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="@dimen/fontsize_content_normal" />

    <com.nahuo.library.controls.EditTextEx
        android:id="@+id/specqty_items_edtQty"
        style="@style/edittext_one_style"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:textSize="@dimen/fontsize_content_middle"
        android:drawableRight="@drawable/txt_clear_bg"
        android:inputType="number"
        android:singleLine="true" />

    <TextView
        android:id="@+id/specqty_items_lkbDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/specqty_item_del"
        android:textColor="@drawable/linkbutton"
        android:textSize="@dimen/fontsize_content_default" />

</LinearLayout>