<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="#7fffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_live"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/drawable_publisher_live"
            android:gravity="center_horizontal"
            android:paddingBottom="40dp"
            android:paddingTop="40dp"
            android:text="直播"
            android:textColor="@drawable/text_accent_gray_color" />

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/drawable_publisher_video"
            android:gravity="center_horizontal"
            android:paddingBottom="40dp"
            android:paddingTop="40dp"
            android:text="小视频"
            android:textColor="@drawable/text_accent_gray_color" />
        <TextView
            android:id="@+id/tv_ugc_cut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/drawable_ugc_editer"
            android:gravity="center_horizontal"
            android:paddingBottom="40dp"
            android:paddingTop="40dp"
            android:text="视频裁剪"
            android:textColor="@drawable/text_accent_gray_color" />
        <TextView
            android:id="@+id/tv_ugc_join"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/drawable_ugc_composer"
            android:gravity="center_horizontal"
            android:paddingBottom="40dp"
            android:paddingTop="40dp"
            android:text="视频合成"
            android:textColor="@drawable/text_accent_gray_color" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/colorGray3"
        android:layout_height="0.1dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/publisher_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:src="@drawable/publisher_close" />

    </FrameLayout>

</LinearLayout>