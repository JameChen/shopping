<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_bg"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/phqd_item_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_order_detail_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="@dimen/activity_horizontal_8dp"
            android:layout_marginRight="@dimen/activity_horizontal_8dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@android:id/checkbox"
            android:contentDescription="@android:string/ok"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txt_order_detail_name"
            style="@style/Text.M.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/img_order_detail_icon" />

        <RelativeLayout
            android:id="@+id/rl_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_order_detail_name"
            android:layout_toRightOf="@+id/img_order_detail_icon"
            android:paddingBottom="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/txt_order_price"
                style="@style/Text.M.Gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray_92" />

            <TextView
                android:id="@+id/txt_order_count"
                style="@style/Text.M.Gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray_92" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rl_mid"
            android:layout_below="@+id/rl_mid"
            android:layout_marginTop="5dp"
            android:background="@drawable/order_button_green_bg"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="13sp" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bg_gray"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/txt_order_detail_detail"
            style="@style/Text.M.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_8dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical|left"
            android:padding="5dp"
            android:textColor="@color/gray_92" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            ></View>
        <TextView
            android:id="@+id/txt_order_detail_order_goods"
            style="@style/Text.M.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_8dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical|left"
            android:padding="5dp"
            android:textColor="@color/gray_92" />
    </LinearLayout>

</LinearLayout>