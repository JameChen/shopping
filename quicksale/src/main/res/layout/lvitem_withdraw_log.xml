<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listview_item_height_medium"
    android:orientation="horizontal" 
    android:weightSum="6"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    >
    

    <TextView 
        android:id="@+id/trade_money"
        android:textAppearance="@style/myTextAppearance.micro"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.9"
        android:gravity="center_vertical"
        />
    <TextView 
        android:id="@+id/trade_time"
        android:textAppearance="@style/myTextAppearance.micro"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.9"
        android:gravity="center_vertical"
        />
    <TextView 
        android:id="@+id/trade_state"
        android:textAppearance="@style/myTextAppearance.micro"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.9"
        android:gravity="center_vertical"
        />
    <ImageView 
        android:id="@+id/right_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:src="@drawable/more_mini"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        />
</LinearLayout>

