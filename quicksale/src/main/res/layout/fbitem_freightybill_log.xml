<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff2f2f2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">
            <RelativeLayout
                style="@style/match_wrap"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/tv_freghity_bill_sumtime"
                    style="@style/style_tv_left"
                    android:text="时间"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_freghity_bill_state"
                    style="@style/style_tv_right"
                    android:text="状态"
                    android:textSize="16sp"
                    android:textColor="@color/bg_red_btn"/>
            </RelativeLayout>

            <RelativeLayout
                style="@style/match_wrap"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp">
                <TextView
                    style="@style/style_tv_left"
                    android:text="已付运费:"/>
                <TextView
                    android:id="@+id/tv_freghity_bill_paid"
                    style="@style/style_tv_right"
                    android:text="状态"/>
            </RelativeLayout>


            <RelativeLayout
                style="@style/match_wrap"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp">
                <TextView
                    style="@style/style_tv_left"
                    android:text="实收运费:"/>
                <TextView
                    android:id="@+id/tv_freghity_bill_reality"
                    style="@style/style_tv_right"
                    android:text="状态"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#a19f9f"
                android:layout_marginTop="5dp"/>

            <RelativeLayout
                style="@style/match_wrap"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp">
                <TextView
                    style="@style/style_tv_left"
                    android:text="结余:"/>
                <TextView
                    android:id="@+id/tv_freghity_bill_surplus"
                    style="@style/style_tv_right"
                    android:text="状态"/>
            </RelativeLayout>


        <TextView
            android:id="@+id/tv_freghity_bill_desc"
            style="@style/style_tv_right"
            android:text="查看详情"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/bg_corn_btn"
            android:textColor="@color/bg_red_btn"/>
        </LinearLayout>
</LinearLayout>