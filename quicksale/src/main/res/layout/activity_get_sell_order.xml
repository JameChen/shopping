<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/custom_title" />

    <com.nahuo.widget.TouchFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--<include layout="@+layout/base_oder_info" />-->
                <include layout="@layout/base_oder_info" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:text="买家收货信息"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_order_buyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:minWidth="60dp"
                        android:singleLine="true"
                        android:textIsSelectable="true" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_order_post_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginTop="2dp"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/txt_order_post_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginTop="2dp"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/txt_order_post_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginTop="2dp"
                    android:textIsSelectable="true" />

                <View
                    style="@style/line_view"
                    android:layout_marginTop="@dimen/activity_margin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/activity_margin"
                            android:text="给上家的报单信息"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_edit"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/activity_margin"
                            android:background="@drawable/address_edt"
                            android:visibility="invisible" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/txt_order_post_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginTop="2dp"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/txt_order_post_phone1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginTop="2dp"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/txt_order_post_address1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginTop="2dp"
                        android:textIsSelectable="true" />

                    <View
                        style="@style/line_view"
                        android:layout_marginTop="@dimen/activity_margin" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/activity_margin"
                            android:text="物流信息"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_edit_express"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/activity_margin"
                            android:background="@drawable/address_edt"
                            android:visibility="invisible" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/txt_express_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginTop="2dp"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/txt_express_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginTop="2dp"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/txt_express_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginTop="2dp"
                        android:textIsSelectable="true" />

                    <View
                        style="@style/line_view"
                        android:layout_marginTop="@dimen/activity_margin" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </com.nahuo.widget.TouchFrameLayout>
</LinearLayout>